<%- include("partials/boiler") -%>
  <link rel="stylesheet" href="/css/categoriesstyles.css">
  <link rel="stylesheet" href="/css/cardstyle.css">

  <%- include("partials/header") -%>
  <div class="cara">
    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
      <ol class="carousel-indicators">
        <% for(var i = 0; i < upcoming.length; i++){ %>
          <% if(i == 0){ %>
        <li data-target="#carouselExampleIndicators" data-slide-to="<%= i %>" class="active"></li>
          <% } else { %>
            <li data-target="#carouselExampleIndicators" data-slide-to="<%= i %>"></li>
            <% } %>
        <% } %>
      </ol>
      <div class="carousel-inner">
        <% for(var i = 0; i < upcoming.length; i++){ %>
          <% if(i == 0) { %>
        <div class="carousel-item active">
          <img class="d-block w-100" src="\img\eventPic\<%= upcoming[i].eventPic %>" alt="First slide" height="300" width="70">
        </div>
        <% } else { %>
          <div class="carousel-item">
            <img class="d-block w-100" src="\img\eventPic\<%= upcoming[i].eventPic %>" alt="event slide" height="300" width="70">
          </div>
          <% } %>
        <% } %>
      </div>
      <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
      </a>
      <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
      </a>
    </div>
  </div>


    <p class="explore"><u>
        <%= postcategory %>
      </u></p>
    <div class="cards">
      <% for(var i = 0; i < allPosts.length; i++){ %>
        <div class="card" style="border: 10px; border-color: black;">
          <img class="card-img-top" src="/img/postPic/<%= allPosts[i].postPicture %>" alt="Card image cap">
          <div class="card-body mb-4 card_content">
            <h3 class="card_title" style="margin-bottom:20px; "><%= allPosts[i].Title %></h3>
            <span class="card_subtitle" style="font-size: 15px;">Created By: <a href="/profile/<%= allPosts[i].Username %>" style = "color: rgb(30, 34, 83);"><%= allPosts[i].Username %></a></span>
            <p class="card-text card_description"><%=allPosts[i].Description.substring(0, 90)%><br><a href="/post_details/<%= allPosts[i].Title %>"><span style = "color: grey;">Read more</span></a></p>
          </div>
        </div>
      <% } %>
        </div>
    </div>
  </div>
</div>




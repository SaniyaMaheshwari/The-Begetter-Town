<%- include("partials/boiler") -%>
  <link rel="stylesheet" href="/css/categoriesstyles.css">
  <%- include("partials/header") -%>
  <div class="cara">
    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
      <ol class="carousel-indicators">
        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
      </ol>
      <div class="carousel-inner">
        <div class="carousel-item active">
          <img class="d-block w-100" src="\img\Hey! (1).png" alt="First slide" height="300" width="70">
        </div>
        <div class="carousel-item">
          <img class="d-block w-100" src="\img\Hey! (4).png" alt="Second slide">
        </div>
        <div class="carousel-item">
          <img class="d-block w-100" src="\img\WhatsApp Image 2021-09-07 at 12.59.09 PM.jpeg" alt="Third slide">
        </div>
      </div>
      <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
      </a>
      <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
      </a>
    </div>
  </div>
    <p class="explore"><u><%= postcategory %></u></p>
    <div class="cards">
    <% for(var i = 0; i < posts.length; i++){ %>
    <div class="card">
      <img class="card-img-top" src="/img/Artcalender.png" alt="Card image cap">
      <div class="card-body mb-4">
        <p><%= posts[i].Title %></p>
        <p class="card-text"><%= posts[i].Description.substring(0, 90)%><br><a href="/post_details/<%= posts[i].Title %>">Read more</a></p>
      </div>
    </div>
    <% } %>
  </div>
  <%- include("partials/footer") -%>
  </body>